# Development Dockerfile with hot reload
FROM node:20-alpine

WORKDIR /app

# Enable corepack for pnpm
RUN corepack enable

# Install dependencies
COPY package.json pnpm-lock.yaml* ./
RUN pnpm install

# Copy source
COPY . .

# Generate Prisma client
RUN pnpm db:generate

EXPOSE 4000

CMD ["pnpm", "dev"]
